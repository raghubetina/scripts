<div class="page-header">
  <h3>Rating #<%= @rating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Response</dt>
      <dd>
        <% if @rating.response.present? %>
          <a href="/responses/<%= @rating.response_id %>">
            <%= @rating.response.body %>
          </a>
        <% end %>
      </dd>

      <dt>Stars</dt>
      <dd><%= @rating.stars %></dd>

      <dt>Comment</dt>
      <dd><%= @rating.comment %></dd>

      <dt>User</dt>
      <dd>
        <% if @rating.user.present? %>
          <a href="/users/<%= @rating.user_id %>">
            <%= @rating.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ratings" class="btn btn-primary">
        Back
      </a>
      <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_rating/<%= @rating.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Rating has many vignette -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Vignette
      </li>

      <% @rating.vignette.each do |vignette| %>
        <li class="list-group-item">
          <a href="/vignettes/<%= vignette.id %>">
            <%= vignette.body %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/vignettes/<%= vignette.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/vignettes/<%= vignette.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_vignette/<%= vignette.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
